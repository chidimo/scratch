{
  "name": "scratch",
  "displayName": "Scratchpad (Gists)",
  "description": "Local scratch folder integration for the Scratchpad system.",
  "version": "0.4.2",
  "publisher": "chidimo",
  "license": "MIT",
  "homepage": "https://github.com/chidimo/scratch",
  "bugs": {
    "url": "https://github.com/chidimo/scratch/issues"
  },
  "icon": "media/scratch-icon.png",
  "keywords": [
    "chidimo",
    "scratchpad",
    "developer",
    "notes",
    "gist",
    "productivity",
    "vscode-extension"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:chidimo/scratch.git"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "scratch.createScratchFolder",
        "title": "Scratch (Gists): Create Scratch Folder"
      },
      {
        "command": "scratch.openScratchFolder",
        "title": "Scratch (Gists): Open Scratch Folder"
      },
      {
        "command": "scratch.showUserIdentity",
        "title": "Scratch (Gists): Show User Identity"
      },
      {
        "command": "scratch.showGithubStatus",
        "title": "Scratch (Gists): Show GitHub Status"
      },
      {
        "command": "scratch.signInGithub",
        "title": "Scratch (Gists): Sign In to GitHub"
      },
      {
        "command": "scratch.signOutGithub",
        "title": "Scratch (Gists): Sign Out of GitHub"
      },
      {
        "command": "scratch.openExtensionSettings",
        "title": "Open settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "scratch.syncGists",
        "title": "Sync GitHub notes",
        "icon": "$(sync)"
      },
      {
        "command": "scratch.refreshGists",
        "title": "Re-sync notes",
        "icon": "$(refresh)"
      },
      {
        "command": "scratch.refreshGistsInProgress",
        "title": "Syncing notes...",
        "icon": "$(sync~spin)"
      },
      {
        "command": "scratch.createNote",
        "title": "Create note",
        "icon": "$(add)"
      },
      {
        "command": "scratch.refreshScratchState",
        "title": "Refresh extension state"
      },
      {
        "command": "scratch.deleteNote",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "scratch.renameNote",
        "title": "Rename",
        "icon": "$(pencil)"
      },
      {
        "command": "scratch.openNoteInBrowser",
        "title": "Open in browser",
        "icon": "$(globe)"
      },
      {
        "command": "scratch.addNoteToGist",
        "title": "Add Note",
        "icon": "$(plus)"
      },
      {
        "command": "scratch.deleteGist",
        "title": "Delete note",
        "icon": "$(trash)"
      },
      {
        "command": "scratch.openNoteInBrowser",
        "title": "Open in Browser",
        "icon": "$(globe)"
      }
    ],
    "configuration": {
      "title": "Scratch (Gists)",
      "properties": {
        "scratch.storagePath": {
          "title": "Scratch (Gists): Storage Path",
          "type": "string",
          "default": "~/scratch",
          "description": "Global folder used to store Scratchpad gists."
        },
        "scratch.autoCreateScratchFolder": {
          "title": "Scratch (Gists): Auto Create Scratch Folder",
          "type": "boolean",
          "default": true,
          "description": "Automatically create the scratch folder when missing."
        },
        "scratch.watchScratchFolder": {
          "title": "Scratch (Gists): Watch Scratch Folder",
          "type": "boolean",
          "default": true,
          "description": "Watch scratch folder files and log changes."
        },
        "scratch.userIdStrategy": {
          "title": "Scratch (Gists): User ID Strategy",
          "type": "string",
          "default": "git",
          "enum": [
            "git"
          ],
          "description": "User identification strategy for the extension."
        },
        "scratch.gistAutoRefreshMinutes": {
          "title": "Scratch (Gists): Gist Auto Refresh Minutes",
          "type": "number",
          "default": 0,
          "enum": [
            0,
            5,
            10,
            15,
            20,
            25,
            30
          ],
          "enumDescriptions": [
            "Disabled - no auto-refresh",
            "5 minutes",
            "10 minutes",
            "15 minutes",
            "20 minutes",
            "25 minutes",
            "30 minutes"
          ],
          "description": "Auto-refresh imported gists every N minutes. Setting to 0 disables auto-refresh."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scratch",
          "title": "Scratch (Gists)",
          "icon": "media/scratch-extension-icon.svg"
        }
      ]
    },
    "views": {
      "scratch": [
        {
          "id": "scratch.gistsFlatView",
          "name": "Notes (Flat List)"
        },
        {
          "id": "scratch.gistsView",
          "name": "Notes (Grouped by Gist)"
        },
        {
          "id": "scratch.todosView",
          "name": "TODOs"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "scratch.syncGists",
          "when": "view == scratch.gistsView",
          "group": "navigation"
        },
        {
          "command": "scratch.syncGists",
          "when": "view == scratch.gistsFlatView",
          "group": "navigation"
        },
        {
          "command": "scratch.createNote",
          "when": "view == scratch.gistsView",
          "group": "navigation"
        },
        {
          "command": "scratch.createNote",
          "when": "view == scratch.gistsFlatView",
          "group": "navigation"
        },
        {
          "command": "scratch.openExtensionSettings",
          "when": "view == scratch.gistsView",
          "group": "navigation"
        },
        {
          "command": "scratch.openExtensionSettings",
          "when": "view == scratch.gistsFlatView",
          "group": "navigation"
        },
        {
          "command": "scratch.refreshGists",
          "when": "view == scratch.gistsView && !scratch.isRefreshingGists",
          "group": "navigation"
        },
        {
          "command": "scratch.refreshGists",
          "when": "view == scratch.gistsFlatView && !scratch.isRefreshingGists",
          "group": "navigation"
        },
        {
          "command": "scratch.refreshGistsInProgress",
          "when": "view == scratch.gistsView && scratch.isRefreshingGists",
          "group": "navigation"
        },
        {
          "command": "scratch.refreshGistsInProgress",
          "when": "view == scratch.gistsFlatView && scratch.isRefreshingGists",
          "group": "navigation"
        },
        {
          "command": "scratch.refreshScratchState",
          "when": "view == scratch.todosView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "scratch.refreshGistsInProgress",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "scratch.addNoteToGist",
          "when": "view == scratch.gistsView && viewItem == gist",
          "group": "inline@1"
        },
        {
          "command": "scratch.deleteGist",
          "when": "view == scratch.gistsView && viewItem == gist",
          "group": "inline@2"
        },
        {
          "command": "scratch.openNoteInBrowser",
          "when": "view == scratch.gistsView && viewItem == gist",
          "group": "inline@3"
        },
        {
          "command": "scratch.renameNote",
          "when": "view == scratch.gistsFlatView && viewItem == file",
          "group": "inline@1"
        },
        {
          "command": "scratch.deleteNote",
          "when": "view == scratch.gistsFlatView && viewItem == file",
          "group": "inline@2"
        },
        {
          "command": "scratch.openNoteInBrowser",
          "when": "view == scratch.gistsFlatView && viewItem == file",
          "group": "inline@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package --allow-missing-repository",
    "package:clean": "rm -f *.vsix",
    "package:with-build": "yarn compile && yarn package",
    "publish:vsce": "vsce publish --allow-missing-repository -p $VSCE_PAT",
    "publish:ovsx": "ovsx publish -p $OVSX_TOKEN",
    "publish:all": "yarn publish:vsce && yarn publish:ovsx"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.82.0",
    "@vscode/vsce": "^3.7.1",
    "ovsx": "^0.10.8",
    "typescript": "^5.0.0"
  }
}