{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mobile",
  "projectType": "application",
  "tags": ["mobile", "expo", "react-native"],
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "expo start",
        "cwd": "apps/mobile"
      }
    },
    "android": {
      "executor": "nx:run-commands",
      "options": {
        "command": "expo start --android",
        "cwd": "apps/mobile"
      }
    },
    "ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "expo start --ios",
        "cwd": "apps/mobile"
      }
    },
    "web": {
      "executor": "nx:run-commands",
      "options": {
        "command": "expo start --web",
        "cwd": "apps/mobile"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn lint",
        "cwd": "apps/mobile"
      }
    },
    "build:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eas-cli@latest workflow:run create-development-builds.yml",
        "cwd": "apps/mobile"
      }
    },
    "build:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eas-cli@latest workflow:run create-production-builds.yml",
        "cwd": "apps/mobile"
      }
    }
  }
}
